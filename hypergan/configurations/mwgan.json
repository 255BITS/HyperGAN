
{
  "description": "Multi-marginal Wasserstein GAN",
  "publication":"https://arxiv.org/pdf/1911.00888v1.pdf",
  "discriminator": 
  {
    "class": "class:hypergan.discriminators.configurable_discriminator.ConfigurableDiscriminator",
    "defaults":{
      "filter": [3,3],
      "stride": [2,2],
      "avg_pool": [1,1],
      "activation": "relu",
      "initializer": "he_normal",
      "random_stddev": 0.02
    },
    "layers":[
      "conv 64 ", 
      "conv 128",
      "conv 256",
      "combine_features",
      "conv 384",
      "conv 512",
      "linear 1 activation=null bias=false"
    ]
  },

  "latent":
  {
    "class": "function:hypergan.distributions.uniform_distribution.UniformDistribution",
    "min": -1,
    "max": 1,
    "z": 512
  },

  "generator": 
  {
    "class": "class:hypergan.discriminators.configurable_discriminator.ConfigurableDiscriminator",
    "defaults":{
       "activation": "relu",
      "filter": [3,3],
      "stride": [1,1],
      "avg_pool": [1,1],
      "initializer": "he_normal",
      "random_stddev": 0.02
    },
    "layers":[
      "identity name=z",
      "latent",
      "linear 512",
      "linear 512 name=w",
      "layer z",


      "conv stride=2 64 adaptive_instance_norm=w",
      "conv stride=2 128 adaptive_instance_norm=w",
      "conv stride=2 256 adaptive_instance_norm=w",
      "conv 256",
      "resize_conv stride=1 128 adaptive_instance_norm=w",
      "resize_conv stride=1 64 adaptive_instance_norm=w  ",
      "resize_conv stride=1 3 adaptive_instance_norm=w activation=clamped_unit "
    ]
  },
 
  "loss": {
    "class": "function:hypergan.losses.wasserstein_loss.WassersteinLoss",
    "reduce": "reduce_mean"
  },

  "mi_loss": {
    "class": "function:hypergan.losses.standard_loss.StandardLoss",
    "reduce": "reduce_mean"
  },


    "trainer": {
      "class": "function:hypergan.trainers.multi_marginal_trainer.MultiMarginalTrainer",
      "optimizer": {
        "class": "function:hypergan.optimizers.curl_optimizer.CurlOptimizer",
        "learn_rate": 0.0001,
        "d_rho": 1.0,
        "g_rho": 1.0,


          "optimizer": {
              "class": "function:tensorflow.python.training.adam.AdamOptimizer",
            "learn_rate": 1e-4,
              "beta1":0.5,
            "beta2": 0.999
          }

      }
  },

  "runtime": {
    "anysize": true,
    "train": "hypergan train [source dataset] -a [target dataset 1] -a [target dataset 2] --sampler aligned -b 8 --size 128x128x3"
  },
  "hypergan_version": "0.11.0",
  "grad_penalty_lambda": 10,
  "interdomain_lambda": 10,
  "lf": 3,
  "class": "class:hypergan.gans.multi_marginal_gan.MultiMarginalGAN"
}
